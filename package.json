{
	"name": "vue-tools",
	"displayName": "vue-tools",
	"description": "Vue development tools",
	"author": "Filip Rak",
	"publisher": "filiprak",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:typescript",
		"onLanguage:typescriptreact"
	],
	"main": "./client/src/extension.js",
	"contributes": {
		"configuration": [
            {
                "id": "vue-tools",
                "title": "Vue Tools",
                "properties": {
                    "vue-tools.tags": {
                        "type": "array",
                        "description": "List of template tags to enable html intellisense in.",
                        "items": {
                            "type": "string",
                            "description": "Tag name."
                        },
                        "default": [
                            "html",
                            "raw"
                        ]
                    },
                    "vue-tools.format.enabled": {
                        "type": "boolean",
                        "description": "Enable/disable formatting of html template strings.",
                        "default": true
                    }
                }
            }
        ],
		"semanticTokenTypes": [
			{
				"id": "translatable",
				"superType": "string",
				"description": "Translatable interpolation tag string."
			}
		],
		"grammars": [
			{
				"injectTo": [
					"source.js",
					"source.js.jsx",
					"source.jsx",
					"source.ts",
					"source.tsx",
					"text.html.basic"
				],
				"scopeName": "inline.vue-tools.html",
				"path": "./syntaxes/html.injection.json",
				"embeddedLanguages": {
					"meta.embedded.block.html": "html",
					"meta.embedded.block.css": "css",
					"source.css": "css"
				}
			},
			{
				"injectTo": [
					"source.js",
					"source.js.jsx",
					"source.jsx",
					"source.ts",
					"source.tsx",
					"text.html.basic"
				],
				"scopeName": "inline.vue-tools.string",
				"path": "./syntaxes/string.injection.json",
				"embeddedLanguages": {
					"meta.template.expression.ts": "typescript"
				}
			},
			{
				"injectTo": [
					"source.js",
					"source.js.jsx",
					"source.jsx",
					"source.ts",
					"source.tsx",
					"text.html.basic"
				],
				"scopeName": "inline.vue-tools.style",
				"path": "./syntaxes/style.injection.json",
				"embeddedLanguages": {
					"meta.template.expression.ts": "typescript"
				}
			},
			{
				"injectTo": [
					"source.js",
					"source.js.jsx",
					"source.jsx",
					"source.ts",
					"source.tsx",
					"text.html.basic"
				],
				"scopeName": "inline.vue-tools.svg",
				"path": "./syntaxes/svg.injection.json",
				"embeddedLanguages": {
					"meta.embedded.block.svg": "xml"
				}
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js",
		"build": "vsce package"
	},
	"dependencies": {
		"typescript-lit-html-plugin": "^0.9.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.57.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"vsce": "^2.6.7"
	}
}
