{
    "scopeName": "vue.injection",
    "injectionSelector": "R:string.quoted.single -comment",
    "patterns": [
        {
            "contentName": "meta.embedded.block.html",
            "patterns": [
                {
                    "include": "text.html.derivative"
                }
            ]
        },
        {
            "match":"{{_(\\*[a-zA-Z]{2,4}\\*)?(.*?)_}}",
            "name": "comment"
        }
    ]
}